{
  "name": "salesforce-oauth-middleware",
  "vendor": "vtex",
  "version": "0.0.1",
  "title": "Salesforce OAuth Middleware",
  "description": "Middleware to authenticate using Salesforce OAuth and store user access token to be retrieved later",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "vtexid.vtex.com.br",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "my.arcaplanet.it",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "dev1-agrifarma.cs84.force.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "partial-agrifarma.cs162.force.com",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "*.force.com",
        "path": "*"
      }
    },
    {
      "name": "vbase-read-write"
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    }
  ],
  "settingsSchema": {
    "title": "Salesforce Oauth Middleware Settings",
    "type": "object",
    "properties": {
      "production": {
        "title": "Production Settings",
        "type": "object",
        "properties": {
          "endpoint": {
            "title": "Production Endpoint",
            "description": "(e.g.: https://login.salesforce.com)",
            "type": "string"
          },
          "credentials": {
            "title": "Production Credentials",
            "type": "object",
            "properties": {
              "clientId": {
                "title": "client_id",
                "type": "string"
              },
              "clientSecret": {
                "title": "client_secret",
                "type": "string"
              }
            }
          }
        }
      },
      "staging": {
        "title": "Staging Settings",
        "type": "object",
        "properties": {
          "endpoint": {
            "title": "Staging Endpoint",
            "description": "(e.g.: https://login.salesforce.com)",
            "type": "string"
          },
          "credentials": {
            "title": "Staging Credentials",
            "type": "object",
            "properties": {
              "clientId": {
                "title": "client_id",
                "type": "string"
              },
              "clientSecret": {
                "title": "client_secret",
                "type": "string"
              }
            }
          }
        }
      },
      "configs": {
        "title": "General Middleware Configuration",
        "type": "object",
        "properties": {
          "forceProduction": {
            "title": "Always use production settings",
            "type": "boolean"
          }
        }
      }
    }
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
